<header>
  <a href="/" class="page-logo">Gym Coach</a>
  <nav>
    <% if (!locals.isAuthenticated) { %>
      <a href="/signup">Signup</a>
      <a href="/login">Login</a>
    <% } %>
    <% if (locals.isAuthenticated && !locals.isAdmin) { %>
      <a href="/program/<%= locals.uid %>">My Program</a>
    <% } %>
    <% if (locals.isAdmin) { %>
      <a href="/admin/users">Manage Users</a>
      <a href="/admin/logs">Manage Workout Logs</a>
      <a href="/admin/nutrition">Manage Nutrition Plans</a>
    <% } %>
    <% if (locals.isAuthenticated) { %>
      <a href="/logout">Logout</a>
    <% } %>
  </nav>
  <%- include("drawer-button") %>
</header>