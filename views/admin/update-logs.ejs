<%- include("../includes/head", {title: "Update Workout Log"}) %>
<link rel="stylesheet" href="/styles/forms.css" />
<link rel="stylesheet" href="/styles/update-forms.css" />
</head>
<body>
  <%- include("../includes/header") %>
  <main>
    <h2 class="page-heading">Update Workout Log</h2>
    <form>
      <input
        type="text"
        name="log-title"
        id="log-title"
        placeholder="Log Title..."
        required
      />
      <ul>
        <!--Loop Through Workouts-->
        <li>
          <div class="workout-details">
            <select name="workout" class="workout" required>
              <option value="" disabled selected>Choose Workout</option>
              <option value="[Workout ID]">[Workout Title]</option>
              <option value="[Workout ID]">[Workout Title]</option>
              <option value="[Workout ID]">[Workout Title]</option>
            </select>
            <input
              type="number"
              name="sets"
              class="sets"
              placeholder="Sets..."
              required
            />
            <input
              type="number"
              name="reps"
              class="reps"
              placeholder="Reps..."
              required
            />
            <button type="button" class="btn-main remove-btn">Remove</button>
          </div>
        </li>
        <!--End Loop-->
      </ul>
      <button type="button" class="btn-main" id="add-fields-btn">Add Workout</button>
      <div id="form-control-btns">
        <button class="btn-main btn-alt">Save</button>
      </div>
    </form>
  </main>
  <%- include("../includes/footer") %>
</body>
</html>
